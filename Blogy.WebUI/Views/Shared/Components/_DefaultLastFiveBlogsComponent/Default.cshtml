@model List<ResultBlogDto>

<section class="section bg-light">
    <div class="container">
        <div class="row align-items-stretch retro-layout">
            @if (Model != null && Model.Count >= 5)
            {
                <!-- 🟩 SOL TARAF (1. ve 2. blog) -->
                <div class="col-md-4">
                    <a href="/Blog/BlogDetails/@Model[0].Id" class="h-entry mb-30 v-height gradient">
                        <div class="featured-img" style="background-image: url('@Model[0].CoverImage');"></div>
                        <div class="text">
                            <span class="date">@Model[0].CreatedDate.ToString("dd MMM yyyy")</span>
                            <h2>@Model[0].Title</h2>
                        </div>
                    </a>
                    <a href="/Blog/BlogDetails/@Model[1].Id" class="h-entry v-height gradient">
                        <div class="featured-img" style="background-image: url('@Model[1].CoverImage');"></div>
                        <div class="text">
                            <span class="date">@Model[1].CreatedDate.ToString("dd MMM yyyy")</span>
                            <h2>@Model[1].Title</h2>
                        </div>
                    </a>
                </div>

                <!-- 🟨 ORTA TARAF (3. blog) -->
                <div class="col-md-4">
                    <a href="/Blog/BlogDetails/@Model[2].Id" class="h-entry img-5 h-100 gradient">
                        <div class="featured-img" style="background-image: url('@Model[2].CoverImage');"></div>
                        <div class="text">
                            <span class="date">@Model[2].CreatedDate.ToString("dd MMM yyyy")</span>
                            <h2>@Model[2].Title</h2>
                        </div>
                    </a>
                </div>

                <!-- 🟦 SAĞ TARAF (4. ve 5. blog) -->
                <div class="col-md-4">
                    <a href="/Blog/BlogDetails/@Model[3].Id" class="h-entry mb-30 v-height gradient">
                        <div class="featured-img" style="background-image: url('@Model[3].CoverImage');"></div>
                        <div class="text">
                            <span class="date">@Model[3].CreatedDate.ToString("dd MMM yyyy")</span>
                            <h2>@Model[3].Title</h2>
                        </div>
                    </a>
                    <a href="/Blog/BlogDetails/@Model[4].Id" class="h-entry v-height gradient">
                        <div class="featured-img" style="background-image: url('@Model[4].CoverImage');"></div>
                        <div class="text">
                            <span class="date">@Model[4].CreatedDate.ToString("dd MMM yyyy")</span>
                            <h2>@Model[4].Title</h2>
                        </div>
                    </a>
                </div>
            }
            else if (Model != null && Model.Any())
            {
                <!-- Eğer 5’ten az blog varsa, var olanları sırayla göster -->
                @foreach (var item in Model)
                {
                    <div class="col-md-4 mb-4">
                        <a href="/Blog/BlogDetails/@item.Id" class="h-entry v-height gradient">
                            <div class="featured-img" style="background-image: url('@item.CoverImage');"></div>
                            <div class="text">
                                <span class="date">@item.CreatedDate.ToString("dd MMM yyyy")</span>
                                <h2>@item.Title</h2>
                            </div>
                        </a>
                    </div>
                }
            }
            else
            {
                <p class="text-center text-muted">Henüz blog yazısı eklenmemiş.</p>
            }
        </div>
    </div>
</section>
