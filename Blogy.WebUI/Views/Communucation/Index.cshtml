@model ResultCommunucationDto
@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="container my-5 py-5">
    <div class="row justify-content-center g-5">
        <!-- İletişim Bilgileri -->
        <div class="col-lg-5 col-md-6">
            <div class="p-4 rounded-4 shadow-lg bg-light h-100">
                <h2 class="fw-bold mb-4 text-dark">@Model.Title</h2>
                <ul class="list-unstyled fs-5 text-secondary mb-4">
                    <li class="mb-3">
                        <i class="bi bi-telephone-fill text-dark me-2"></i>
                        <strong>Telefon:</strong> @Model.PhoneNumber
                    </li>
                    <li class="mb-3">
                        <i class="bi bi-envelope-fill text-dark me-2"></i>
                        <strong>E-posta:</strong> @Model.Email
                    </li>
                    <li class="mb-3">
                        <i class="bi bi-geo-alt-fill text-dark me-2"></i>
                        <strong>Adres:</strong> @Model.Address
                    </li>
                </ul>
                <hr />
                <p class="text-muted small mb-0">Sorularınız için bizimle iletişime geçmekten çekinmeyin 💬</p>
            </div>
        </div>

        <!-- İletişim Formu -->
        <div class="col-lg-7 col-md-6">
            <div class="p-4 rounded-4 shadow-lg bg-white">
                <h3 class="fw-bold mb-4">Bize Mesaj Gönderin</h3>
                @if (TempData["MessageSuccess"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["MessageSuccess"]
                    </div>
                }
                @if (TempData["MessageError"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["MessageError"]
                    </div>
                }
                @if (TempData["AIReply"] != null)
                {
                    <div class="alert alert-info mt-3">
                        <strong>AI Yanıtı:</strong> @TempData["AIReply"]
                    </div>
                }
                <form asp-action="SendMessage" asp-controller="Communucation" method="post" class="row g-3">
                    <div class="col-md-6">
                        <label for="AdSoyad" class="form-label fw-semibold">Adınız *</label>
                        <input type="text" class="form-control form-control-lg" id="AdSoyad" name="AdSoyad" placeholder="Adınızı giriniz" required>
                    </div>
                    <div class="col-md-6">
                        <label for="Eposta" class="form-label fw-semibold">E-posta *</label>
                        <input type="email" class="form-control form-control-lg" id="Eposta" name="Eposta" placeholder="ornek@mail.com" required>
                    </div>
                    <div class="col-12">
                        <label for="Konu" class="form-label fw-semibold">Konu *</label>
                        <input type="text" class="form-control form-control-lg" id="Konu" name="Konu" placeholder="Mesaj konusunu yazınız" required>
                    </div>
                    <div class="col-12">
                        <label for="Mesaj" class="form-label fw-semibold">Mesajınız *</label>
                        <textarea class="form-control form-control-lg" id="Mesaj" name="Mesaj" rows="5" placeholder="Mesajınızı buraya yazın..." required></textarea>
                    </div>
                    <div class="col-12 text-end">
                        <button type="submit" class="btn btn-dark btn-lg px-4 rounded-pill shadow-sm">
                            Gönder
                        </button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
