@model CreateBlogDto
@{
    ViewData["Title"] = "CreateBlog";
    Layout = "~/Areas/Writer/Views/Writer/WriterLayout.cshtml";
}


<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Yeni Blog Ekle</h4>
            <a href="/Writer/Blog/Index" class="btn btn-light btn-sm fw-semibold">
                <i class="bi bi-arrow-left"></i> Geri Dön
            </a>
        </div>

        <div class="card-body">
            <form method="post" class="needs-validation" novalidate>
                <div class="row g-3">
                    <div class="col-md-12">
                        <label asp-for="Title" class="form-label fw-semibold">Başlık</label>
                        <input asp-for="Title" class="form-control shadow-sm" placeholder="Blog başlığını giriniz..." />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Description" class="form-label fw-semibold">Açıklama</label>
                        <textarea asp-for="Description" class="form-control shadow-sm" rows="5" placeholder="Blog içeriğini giriniz..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CoverImage" class="form-label fw-semibold">Kapak Resmi URL</label>
                        <input asp-for="CoverImage" class="form-control shadow-sm" placeholder="Örneğin: https://..." />
                        <span asp-validation-for="CoverImage" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="BlogImage1" class="form-label fw-semibold">Blog Resmi 1 URL</label>
                        <input asp-for="BlogImage1" class="form-control shadow-sm" placeholder="İsteğe bağlı görsel..." />
                        <span asp-validation-for="BlogImage1" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="BlogImage2" class="form-label fw-semibold">Blog Resmi 2 URL</label>
                        <input asp-for="BlogImage2" class="form-control shadow-sm" placeholder="İsteğe bağlı görsel..." />
                        <span asp-validation-for="BlogImage2" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CategoryId" class="form-label fw-semibold">Kategori</label>
                        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select shadow-sm">
                            <option value="">Kategori Seçiniz</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-save"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


