@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="~/Admin-Tamplate/assets/images/logos/favicon.png" />
    <link rel="stylesheet" href="~/Admin-Tamplate/assets/css/styles.min.css" />
</head>

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">


        <!-- Sidebar Start -->
        <aside class="left-sidebar">
            <!-- Sidebar scroll-->
            <div>
                <div class="brand-logo d-flex align-items-center justify-content-between">
                    <a href="~/Admin-Tamplate/index.html" class="text-nowrap logo-img">
                        <img src="assets/images/logos/logo.svg" alt="" />
                    </a>
                    <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
                        <i class="ti ti-x fs-6"></i>
                    </div>
                </div>
                <!-- Sidebar navigation-->
                <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
                    <ul id="sidebarnav">
                        <li class="nav-small-cap">
                            <iconify-icon icon="solar:menu-dots-linear" class="nav-small-cap-icon fs-4"></iconify-icon>
                            <span class="hide-menu">SAYFALAR</span>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/User/Profile/Index" aria-expanded="false">
                                <i class="ti ti-atom"></i>
                                <span class="hide-menu">Profil Bilgileri</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/User/ChangePassword/Index" aria-expanded="false">
                                <i class="ti ti-atom"></i>
                                <span class="hide-menu">Şifre Değiştir</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/Blog/Index/" aria-expanded="false">
                                <i class="ti ti-atom"></i>
                                <span class="hide-menu">Ana Sayfaya Dön</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" href="/Admin/Users/Logout" aria-expanded="false">
                                <i class="ti ti-atom"></i>
                                <span class="hide-menu">Çıkış Yap</span>
                            </a>
                        </li>

                    </ul>
                </nav>
                <!-- End Sidebar navigation -->
            </div>
            <!-- End Sidebar scroll-->
        </aside>
        <!--  Sidebar End -->
        <!-- Page Content Start -->
        <div class="body-wrapper">
            <div class="container-fluid py-4">
                @RenderBody()
            </div>
        </div>
        <!-- Page Content End -->
    </div>
    <script src="~/Admin-Tamplate/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/Admin-Tamplate/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Admin-Tamplate/assets/js/sidebarmenu.js"></script>
    <script src="~/Admin-Tamplate/assets/js/app.min.js"></script>
    <script src="~/Admin-Tamplate/assets/libs/apexcharts/dist/apexcharts.min.js"></script>
    <script src="~/Admin-Tamplate/assets/libs/simplebar/dist/simplebar.js"></script>
    <script src="~/Admin-Tamplate/assets/js/dashboard.js"></script>
    @RenderSection("Scripts", required: false)

    <!-- solar icons -->
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
</body>

</html>