@model List<ResultUserDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Admin/AdminLayout.cshtml";
    int count = 0;
}

<h1>Kullanıcılar</h1>

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-tags-fill me-2"></i>Rol Listesi</h4>
            <a href="/Admin/Users/AssignRole" class="btn btn-light btn-sm fw-semibold">
                <i class="bi bi-plus-circle"></i> Yeni Rol
            </a>
        </div>

        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width: 60px;">#</th>
                        <th>Ad Soyad</th>
                        <th>Kullanıcı Adı</th>
                        <th>Email</th>
                        <th>Roller</th>
                        <th class="text-center" style="width: 180px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td class="fw-semibold">@count</td>
                            <td class="fw-normal">@item.FullName</td>
                            <td class="fw-normal">@item.UserName</td>
                            <td class="fw-normal">@item.Email</td>
                            <td class="fw-normal">@foreach(var role in item.Roles)
                                {
                                    <span class="badge text-primary">@role</span> <br />
                                }
                            </td>
                            <td class="text-center">

                                <a href="/Admin/Users/AssignRole/@item.Id" class="btn btn-primary"> Rol Ata</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>