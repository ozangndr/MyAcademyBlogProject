@model CreateCategoryDto
@{
    ViewData["Title"] = "Yeni Kategori Ekle";
    Layout = "~/Areas/Admin/Views/Admin/AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Yeni Kategori Ekle</h4>
            <a href="/Admin/Category/Index" class="btn btn-light btn-sm fw-semibold">
                <i class="bi bi-arrow-left"></i> Geri Dön
            </a>
        </div>

        <div class="card-body">
            <form method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold">Kategori Adı</label>
                    <input asp-for="Name" class="form-control shadow-sm" placeholder="Kategori adını giriniz..." />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check-circle"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
