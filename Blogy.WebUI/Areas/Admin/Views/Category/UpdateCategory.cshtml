@model UpdateCategoryDto
@{
    ViewData["Title"] = "Kategori Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Kategori Güncelle</h4>
            <a href="/Admin/Category/Index" class="btn btn-light btn-sm fw-semibold">
                <i class="bi bi-arrow-left"></i> Geri Dön
            </a>
        </div>

        <div class="card-body">
            <form method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold">Kategori Adı</label>
                    <input asp-for="Name" class="form-control shadow-sm" placeholder="Kategori adını güncelle..." />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-warning text-dark px-4 fw-semibold">
                        <i class="bi bi-arrow-repeat"></i> Güncelle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
