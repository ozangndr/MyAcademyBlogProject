@model List<ResultMessageDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Admin/AdminLayout.cshtml";
    int count = 0;
}


<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-journal-text me-2"></i>Mesaj Listesi</h4>            
        </div>

        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="text-center" style="width:50px;">#</th>
                        <th>Ad Soyad</th>
                        <th>E Mail</th>
                        <th>Konu</th>
                        <th>Gönderim Tarihi</th>
                        <th class="text-center" style="width:160px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td class="text-center fw-semibold">@count</td>
                            <td>@item.AdSoyad</td>
                            <td>@item.Eposta</td>
                            <td>@item.Konu</td>
                            <td>@item.GonderimTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-outline-primary"
                                        data-bs-toggle="modal"
                                        data-bs-target="#messageModal"
                                        data-adsoyad="@item.AdSoyad"
                                        data-eposta="@item.Eposta"
                                        data-konu="@item.Konu"
                                        data-mesaj="@item.Mesaj">
                                    <i class="bi bi-envelope-open"></i> Mesaj Oku
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- 📨 Bootstrap Modal -->
<div class="modal fade" id="messageModal" tabindex="-1" aria-labelledby="messageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 shadow-lg">
            <div class="modal-header bg-primary text-white rounded-top-4">
                <h5 class="modal-title" id="messageModalLabel">Mesaj Detayı</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong>Ad Soyad:</strong> <span id="modalAdSoyad"></span></p>
                <p><strong>E-Posta:</strong> <span id="modalEposta"></span></p>
                <p><strong>Konu:</strong> <span id="modalKonu"></span></p>
                <hr />
                <p id="modalMesaj" class="mt-3"></p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap modal açılmadan önce verileri doldur
        var messageModal = document.getElementById('messageModal');
        messageModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;

            var adSoyad = button.getAttribute('data-adsoyad');
            var eposta = button.getAttribute('data-eposta');
            var konu = button.getAttribute('data-konu');
            var mesaj = button.getAttribute('data-mesaj');

            document.getElementById('modalAdSoyad').textContent = adSoyad;
            document.getElementById('modalEposta').textContent = eposta;
            document.getElementById('modalKonu').textContent = konu;
            document.getElementById('modalMesaj').textContent = mesaj;
        });
    </script>
}


