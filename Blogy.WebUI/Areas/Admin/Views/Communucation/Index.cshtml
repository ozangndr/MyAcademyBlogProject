@model ResultCommunucationDto
@{
    ViewData["Title"] = "İletişim Bilgileri Güncelle";
    Layout = "~/Areas/Admin/Views/Admin/AdminLayout.cshtml";
}

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-dark text-white py-3 rounded-top-4">
            <h4 class="mb-0">
                <i class="bi bi-telephone-forward-fill me-2"></i>İletişim Bilgilerini Güncelle
            </h4>
        </div>

        <div class="card-body p-4">
            <form asp-action="UpdateCommunucation" method="post">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show mt-3 shadow-sm" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <!-- Başlık -->
                <input type="hidden" asp-for="Id"/>

                <div class="mb-4">
                    <label asp-for="Title" class="form-label fw-semibold">Başlık</label>
                    <input asp-for="Title" class="form-control form-control-lg" placeholder="Sayfa başlığı giriniz..." />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <!-- Telefon Numarası -->
                <div class="mb-4">
                    <label asp-for="PhoneNumber" class="form-label fw-semibold">Telefon Numarası</label>
                    <input asp-for="PhoneNumber" class="form-control form-control-lg" placeholder="+90 555 000 00 00" />
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>

                <!-- E-posta -->
                <div class="mb-4">
                    <label asp-for="Email" class="form-label fw-semibold">E-Posta Adresi</label>
                    <input asp-for="Email" class="form-control form-control-lg" placeholder="ornek@mail.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <!-- Adres -->
                <div class="mb-4">
                    <label asp-for="Address" class="form-label fw-semibold">Adres</label>
                    <textarea asp-for="Address" class="form-control form-control-lg" rows="3" placeholder="Adres bilgisini giriniz..."></textarea>
                    <span asp-validation-for="Address" class="text-danger small"></span>
                </div>

                <!-- Butonlar -->
                <div class="d-flex justify-content-end">
                    
                    <button type="submit" class="btn btn-dark btn-lg rounded-pill shadow-sm">
                        <i class="bi bi-save2"></i> Güncelle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
